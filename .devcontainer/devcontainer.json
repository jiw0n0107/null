// devcontainer.json
{
    "name": "My Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.8",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python"
    ],
    "postCreateCommand": "pip install -r requirements.txt"
}
